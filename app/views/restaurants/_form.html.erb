
<%= simple_form_for restaurant do |s| %>
  <%= s.input :name, label: false, placeholder: 'Name' %>
  <%= s.input :address, label: false, placeholder: 'Address' %>
  <%= s.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], label: false, placeholder: 'Category' %>
  <%= s.submit "Add", class: "btd-light" %>
<% end %>
