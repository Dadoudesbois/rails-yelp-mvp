<div class="center">

  <h1><%= @restaurant.name%></h1>
  <h2><%= @restaurant.category%></h2>
  <p><%= @restaurant.address%></p>
  <p><%= @restaurant.phone_number%></p>

  <ul>
    <% if @reviews != nil %>
      <% @reviews.each do |r| %>
        <li>
          <%= 'â­' * r.rating%>
          <%= "#{r.content}" %>
        </li>
      <%end%>
    <%end%>
  </ul>

  <div class="f">
    <h3>Add a review !</h3>
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content, label: false, placeholder: 'What did you think ?'  %>
      <%= f.input :rating, collection: 0..5, label: false, placeholder: 'Your rating' %>
      <%= f.submit "Send", class: "btd-light" %>
    <% end %>
  </div>

  <p>
    <%= link_to "Back to restaurants list", restaurants_path, class: 'btd-light' %>
  </p>

</div>
